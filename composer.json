{
  "name": "rootwork/php-report-generator",
  "description": "A time-saving PHP reporting library.",
  "license": "MIT",
  "keywords": [
    "rootwork",
    "php",
    "reports"
  ],
  "homepage": "https://github.com/rootworkit/php-report-generator",
  "authors": [
    {
      "name": "Mike Soule",
      "email": "mike@rootwork.it"
    }
  ],
  "require": {
    "php": ">=5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.3",
    "phpoffice/phpspreadsheet": "dev-develop",
    "mpdf/mpdf": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Rootwork\\Report\\": "src/Report/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rootwork\\Report\\": ["src/Report", "tests/functional/Report"],
      "Rootwork\\Test\\": "tests/functional"
    }
  },
  "suggest": {
    "phpoffice/phpspreadsheet": "Allows exporting to Excel and required for CSV and PDF exports",
    "mpdf/mpdf": "Required for exporting to PDF"
  }
}
